<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/barColorText"
    android:elevation="@dimen/_4sdp"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp"
    android:translationZ="@dimen/_2sdp">

    <RelativeLayout
        android:id="@+id/dialog_detail_list_customer_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_detail_list_customer_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/dialog_detail_list_customer_tv_statifis"
                android:text="Danh sách các khách hàng: " />

            <TextView
                android:id="@+id/dialog_detail_list_customer_tv_statifis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_8sdp"
                tools:text="120" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_detail_list_customer_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                tools:text="Đã ghi / Chưa ghi :" />

            <TextView
                android:id="@+id/dialog_detail_list_customer_tv_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toRightOf="@+id/dialog_detail_list_customer_tv_1"
                tools:text="75 / 45" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_detail_list_customer_rv_cus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialog_detail_list_customer_rl2"
        android:layout_marginTop="@dimen/_16sdp"></android.support.v7.widget.RecyclerView>
</LinearLayout>