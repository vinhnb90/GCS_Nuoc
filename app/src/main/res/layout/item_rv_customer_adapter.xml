<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rv_customer_adapter_rl_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/rowBookColor"
    android:orientation="horizontal">

    <View
        android:id="@+id/v1"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/v1"
        android:background="@color/rowBookColor"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/item_rv_customer_adapter_tv_name_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyen Van A" />

            <TextView
                android:id="@+id/item_rv_customer_adapter_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="DA GUI THANH CONG"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_rv_customer_adapter_tv_address_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ha Dong" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi so cu" />

            <TextView
                android:id="@+id/item_rv_customer_adapter_tv_write_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="75" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi so moi" />

            <TextView
                android:id="@+id/item_rv_customer_adapter_tv_not_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="75" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>