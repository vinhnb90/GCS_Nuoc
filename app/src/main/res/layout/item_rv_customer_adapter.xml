<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_rv_customer_adapter_rl_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@null"
        android:elevation="@dimen/_2sdp"
        android:translationZ="@dimen/_2sdp">
        <!--android:background="@drawable/xml_border_full_type4"-->
        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_toRightOf="@+id/v1"
            android:background="@drawable/xml_border_full_type5"
            android:orientation="vertical"
            android:padding="@dimen/_6sdp">
            <!--android:background="@color/rowBookColor"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_8sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/item_rv_customer_adapter_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐÃ GỬI THÀNH CÔNG"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />
                <TextView
                    android:layout_toLeftOf="@+id/item_rv_customer_adapter_tv_status"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/item_rv_customer_adapter_tv_name_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trần Văn A"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/item_rv_customer_adapter_tv_address_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Hà Đông"
                android:textColor="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/xml_border_full_type6"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="Chỉ số cũ"
                    android:textColor="@color/barColorText" />

                <TextView
                    android:id="@+id/item_rv_customer_adapter_tv_write_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="75"
                    android:textColor="@color/barColorText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/xml_border_full_type7"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="Chỉ số mới"
                    android:textColor="@color/barColorText" />

                <TextView
                    android:id="@+id/item_rv_customer_adapter_tv_not_write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:text="75"
                    android:textColor="@color/barColorText" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>



