<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/item_rv_customer_adapter_rl_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/xml_border_full_type8"
        android:elevation="@dimen/_4sdp"
        android:orientation="vertical">
        <!--android:background="@drawable/xml_border_full_type4"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_rv_customer_adapter_v_2"
            android:layout_below="@+id/item_rv_customer_adapter_v_1"
            android:layout_alignParentLeft="true"
            android:layout_toRightOf="@+id/item_rv_customer_adapter_v_1"
            android:orientation="vertical"
            android:padding="@dimen/_6sdp">
            <!--android:background="@color/rowBookColor"-->

            <TextView
                android:id="@+id/item_rv_customer_adapter_tv_name_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_rv_customer_adapter_tv_status"
                android:textColor="@color/buttonColor"
                android:textSize="@dimen/_14sdp"
                tools:text="Trần Văn A" />

            <TextView
                android:id="@+id/item_rv_customer_adapter_tv_address_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"
                tools:text="Hà Đông" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_rv_customer_adapter_tv_index"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/xml_button_cricle"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/barColorWhenSelected"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="123" />

                <TextView
                    android:id="@+id/item_rv_customer_adapter_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="ĐÃ GỬI THÀNH CÔNG"
                    android:textColor="@color/buttonColor"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
