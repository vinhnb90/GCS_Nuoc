<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:id="@+id/item_rv_book_adapter_rl_row"
    android:background="@color/rowBookColor"
    android:orientation="horizontal">

    <View
        android:background="@android:color/transparent"
        android:id="@+id/v1"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp" />

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:background="@color/rowBookColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/v1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten quyen" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/item_rv_book_adapter_tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DA GUI THANH CONG"
                    android:visibility="visible" />

                <CheckBox
                    android:id="@+id/item_rv_book_adapter_cb_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_rv_book_adapter_tv_status"
                    android:text="Chon" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_rv_book_adapter_tv_name_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SO GCS 1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khach hang da ghi" />

            <TextView
                android:id="@+id/item_rv_book_adapter_tv_write_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="75" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khach hang chua ghi" />

            <TextView
                android:id="@+id/item_rv_book_adapter_tv_not_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="75" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>