<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setting.SettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTING" />

    <EditText
        android:id="@+id/ac_setting_et_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="url" />

    <EditText
        android:id="@+id/ac_setting_et_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="port" />

    <RadioButton
        android:id="@+id/ac_setting_radio_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cau hinh san luong theo %" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ac_setting_tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="10%" />

        <SeekBar
            android:id="@+id/ac_setting_seek_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ac_setting_tv_percent" />
    </RelativeLayout>

    <RadioButton
        android:id="@+id/ac_setting_radio_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cau hinh san luong theo so m3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ac_setting_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="m3" />

        <EditText
            android:hint="Nhập giới hạn"
            android:id="@+id/ac_setting_et_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ac_setting_tv_number" />
    </RelativeLayout>


    <Button
        android:id="@+id/ac_setting_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickButtonSave"
        android:text="Click SAVE" />
</LinearLayout>