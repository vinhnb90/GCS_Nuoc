<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_16sdp"
    android:background="@drawable/xml_border_full_type8"
    android:elevation="@dimen/_16sdp"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <TextView
        android:id="@+id/dialog_download_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phiên tải dữ liệu." />

    <RelativeLayout
        android:id="@+id/rl_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_t_1">

        <TextView
            android:id="@+id/tv_capnhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Cập nhật dữ liệu"
            android:textStyle="normal" />
        <!--style="@style/textStyle2"-->


        <ProgressBar
            android:id="@+id/dialog_download_pbar_download"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:progress="0"
            android:progressDrawable="@drawable/dialog_download_xml_pbar_custom" />


        <TextView
            android:id="@+id/dialog_download_tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_capnhat"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="0%" />
        <!--style="@style/textStyle4"-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_download_btn_download"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/xml_button_corner_left"
            android:elevation="@dimen/_2sdp"
            android:gravity="right|center_vertical"
            android:onClick="clickLoginButton"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Đồng bộ dữ liệu"
            android:textColor="@color/barColorText"
            android:textSize="@dimen/_7sdp"
            android:translationZ="@dimen/_2sdp" />


        <Button
            android:id="@+id/dialog_download_btn_download_OK"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/xml_button_corner_right"
            android:elevation="@dimen/_2sdp"
            android:gravity="left|center_vertical"
            android:onClick="clickLoginButton"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Kết thúc phiên"
            android:textColor="@color/barColorText"
            android:textSize="@dimen/_7sdp"
            android:translationZ="@dimen/_2sdp" />
    </RelativeLayout>

    <!--style="@style/buttonStyle1"-->
</LinearLayout>