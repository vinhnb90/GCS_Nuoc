<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="@dimen/_2sdp" android:left="@dimen/_2sdp">
        <shape android:shape="oval">
            <solid android:color="@color/colorTransparentBg" />
            <stroke
                android:width="@dimen/_2sdp"
                android:color="@color/buttonColor2" />
            <size
                android:width="@dimen/_20sdp"
                android:height="@dimen/_18sdp" />

        </shape>
    </item>
    <!-- Overlap the left, top and right border using background color  -->
    <item android:bottom="2dp">
        <bitmap
            android:shape="rectangle"
            android:src="@drawable/ic_checked"></bitmap>
    </item>
</layer-list>

