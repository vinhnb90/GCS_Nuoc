<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <stroke android:color="@color/pbarBorderColor" android:width="@dimen/_1sdp"/>
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item>
                    <color android:color="@android:color/transparent" />
                </item>
                <item
                    android:left="@dimen/_3sdp"
                    android:top="@dimen/_3sdp"
                    android:right="@dimen/_3sdp"
                    android:bottom="@dimen/_3sdp">
                    <shape>
                        <solid android:color="@color/pbarColor" />
                        <corners android:radius="@dimen/_5sdp" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>